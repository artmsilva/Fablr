{
  "name": "fable",
  "version": "0.0.0",
  "description": "A simple component story explorer built with Lit",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "validate:metadata": "node scripts/validate-metadata.js",
    "tokens:sync": "node scripts/sync-tokens.js",
    "icons:sync": "node scripts/sync-icons.js",
    "check:fix": "npx @biomejs/biome check --write .",
    "lint:styles": "node --experimental-strip-types lint-styles.ts",
    "lint:imports": "node --experimental-strip-types lint-imports.ts",
    "lint": "npm run lint:styles && npm run lint:imports && node scripts/biome-changed.js",
    "check": "npm run lint",
    "pretest": "npm run lint"
  },
  "keywords": [
    "web-components",
    "lit",
    "storybook",
    "components"
  ],
  "author": "@artmsilva",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "ajv": "^8.17.1",
    "monaco-editor": "^0.45.0",
    "vite": "^7.2.4"
  },
  "dependencies": {
    "htmlparser2": "^10.0.0",
    "lit": "^3.3.1"
  }
}
